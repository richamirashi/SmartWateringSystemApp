<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sws.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.UserRegistrationActivity"
            android:theme="@style/AppTheme.NoActionBar"
        />
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.DevicesListActivity" />
        <activity android:name=".activity.DeviceRegistrationActivity" />
        <activity android:name=".activity.PlantsListActivity" />
        <activity android:name=".activity.PlantRegistrationActivity" />
        <activity android:name=".activity.PlantInfoActivity" />
        <activity android:name=".activity.WaterPlantActivity"/>
        <activity android:name=".activity.SetScheduleActivity"/>
        <activity android:name=".activity.SoilMoistureStatsActivity"/>
    </application>

</manifest>